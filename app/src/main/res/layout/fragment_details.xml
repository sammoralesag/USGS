<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details_screen.DetailsFragment">


    <TextView
        android:id="@+id/tvmag_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4.5"
        android:layout_marginTop="50dp"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_place_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Place Name"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvmag_details"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_time_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sep 12 2022 23:33"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_place_details"
        app:layout_constraintStart_toEndOf="@id/ic_time"/>

    <ImageView
        android:id="@+id/ic_place"
        android:layout_width="46dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_pin"
        app:layout_constraintEnd_toStartOf="@id/tv_lat_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_details"
        android:contentDescription="@string/image" />

    <TextView
        android:id="@+id/tv_long_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="longitude"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time_details"
        app:layout_constraintStart_toEndOf="@id/ic_place"/>

    <TextView
        android:id="@+id/tv_lat_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="latitude"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_long_details"
        app:layout_constraintStart_toEndOf="@id/ic_place"/>

    <ImageView
        android:id="@+id/ic_warning"
        android:layout_width="82dp"
        android:layout_height="87dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_warining"
        app:layout_constraintEnd_toStartOf="@id/tvmag_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/icon" />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_time"
        app:layout_constraintEnd_toStartOf="@id/tv_time_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_place_details"
        android:contentDescription="@string/icon_time" />



</androidx.constraintlayout.widget.ConstraintLayout>